{
  "name": "@gotedo/adonisjs-attachment",
  "version": "1.0.5",
  "description": "Turn any field on your Lucid model to an attachment data type",
  "main": "build/providers/AttachmentLiteProvider.js",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/src"
  ],
  "typings": "./build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node -r @adonisjs/require-ts/build/register bin/test.ts",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json adonisjs/attachment-lite"
  },
  "keywords": [
    "adonisjs",
    "lucid",
    "attachment",
    "attachment-lite"
  ],
  "author": "ndianabasi,gotedo",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^20.6.2",
    "@types/supertest": "^2.0.12",
    "adonis-drive-r2": "^1.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "is-pdf-valid": "^0.0.1",
    "mrm": "^4.1.22",
    "np": "^7.6.1",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.3.0",
    "@adonisjs/lucid": "^17.0.0 || ^18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "yarn": false,
    "yolo": true,
    "contents": ".",
    "anyBranch": false,
    "publish": true,
    "branch": "develop",
    "releaseDraft": true,
    "message": "chore: bump version to %s ðŸš€"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gotedo/adonisjs-attachment.git"
  },
  "bugs": {
    "url": "https://github.com/Gotedo/adonisjs-attachment/issues"
  },
  "homepage": "https://github.com/Gotedo/adonisjs-attachment#readme",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@poppinss/utils": "^5.0.0",
    "detect-file-type": "^0.2.8",
    "sanitize-filename": "^1.6.3"
  },
  "adonisjs": {
    "types": "@gotedo/adonisjs-attachment",
    "providers": [
      "@gotedo/adonisjs-attachment"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "mrmConfig": {
    "core": true,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "14.17.0",
    "probotApps": [
      "stale",
      "lock"
    ],
    "runGhActionsOnWindows": true
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build",
    "test-helpers/__app"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
